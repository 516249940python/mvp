{
    "family": "tancho-task",
    "networkMode": "awsvpc",
    "volumes": [
        {
            "name": "mongo-data"
        }
    ],
    "containerDefinitions": [
        {
            "name": "tancho",
            "image": "tancho",
            "portMappings": [
                {
                    "containerPort": 8000,
                    "hostPort": 8000,
                    "protocol": "tcp"
                }
            ],
            "essential": true,
            "entryPoint": [
                "sh",
                "-c"
            ],
            "command": [
                "/bin/sh -c \"cd /tancho && uvicorn main:app --host 0.0.0.0 --port 80\""
            ]
        },
        {
            "name": "mongo",
            "image": "mongo",
            "mountPoints": [
              {
                "sourceVolume": "mongo-data",
                "containerPath": "/data/db"
              }
            ],
            "essential": true
        }
    ],
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "cpu": "256",
    "memory": "512",
    "executionRoleArn": "arn:aws:iam::206645659952:role/ecsTaskExecutionRole"
}
